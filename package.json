{
  "name": "crud-webapi-with-hono",
  "type": "module",
  "scripts": {
    "dev": "bun run db:seed:local && wrangler dev",
    "deploy": "wrangler deploy --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "biome": "biome check --write ./src",
    "dz:generate": "bun run --env-file ./.dev.vars drizzle-kit generate",
    "dz:studio": "bun run --env-file ./.dev.vars drizzle-kit studio",
    "db:migrate:local": "wrangler d1 migrations apply todo --local",
    "db:migrate:remote": "wrangler d1 migrations apply todo --remote",
    "db:seed:local": "wrangler d1 execute todo --local --file=./src/db/seed.sql",
    "db:seed:remote": "wrangler d1 execute todo --remote --file=./src/db/seed.sql",
    "test": "bun run db:seed:local && vitest"
  },
  "dependencies": {
    "@hono/standard-validator": "^0.1.5",
    "bcryptjs": "^3.0.3",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.10.4",
    "nanoid": "^5.1.6",
    "valibot": "^1.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.2",
    "@types/bun": "^1.3.3",
    "drizzle-kit": "^0.31.6",
    "vitest": "^4.0.14",
    "wrangler": "^4.45.3"
  }
}
