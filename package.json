{
  "name": "crud-webapi-with-hono",
  "type": "module",
  "scripts": {
    "dev": "bun run db:seed && wrangler dev",
    "deploy": "wrangler deploy --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "biome": "biome check --write ./src",
    "dz:generate": "drizzle-kit generate",
    "dz:studio": "drizzle-kit studio",
    "db:migrate:local": "wrangler d1 migrations apply todo --local",
    "db:migrate:remote": "wrangler d1 migrations apply todo --remote",
    "db:seed": "wrangler d1 execute todo --local --file=./src/db/seed.sql"
  },
  "dependencies": {
    "@hono/standard-validator": "^0.1.5",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.10.4",
    "valibot": "^1.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.2",
    "@types/node": "^24.10.0",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.6",
    "wrangler": "^4.45.3"
  }
}
